{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": [
    {
      "target": "app",
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
      {
        "source": "/api/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "private, no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=3600"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/registerStaff",
        "function": "registerStaff"
      },
      {
        "source": "/api/getStaff",
        "function": "getStaff"
      },
      {
          "source": "/api/notifyTip",
          "function": "notifyTip"
      },
      {
          "source": "/api/getXmtpHistory",
          "function": "getXmtpHistory"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
    {
      "target": "sandbox",
      "public": "sandbox",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
} 